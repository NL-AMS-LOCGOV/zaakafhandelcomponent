<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <module-name>zaakafhandelcomponent</module-name>

    <resource-ref>
        <res-ref-name>jdbc/Datasource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
        <lookup-name>java:jboss/datasources/ZaakafhandelcomponentDS</lookup-name>
    </resource-ref>

    <resource-ref>
        <res-ref-name>jdbc/FlowableDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
        <lookup-name>java:jboss/datasources/FlowableDS</lookup-name>
    </resource-ref>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <filter-mapping>
        <filter-name>indexRewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UserPrincipalFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <security-role>
        <role-name>zaakafhandelcomponent_user</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>zaakafhandelcomponent</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>zaakafhandelcomponent_user</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>notificaties</web-resource-name>
            <description>For allowing the reception of zaak notificaties</description>
            <url-pattern>/rest/notificaties</url-pattern>
            <http-method>POST</http-method>
        </web-resource-collection>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>indexeren</web-resource-name>
            <url-pattern>/rest/indexeren/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>signaleren</web-resource-name>
            <url-pattern>/rest/signaleren/*</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>websocket</web-resource-name>
            <description>The authentication check happens in WebSocketServerEndPoint</description>
            <url-pattern>/websocket</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>start</web-resource-name>
            <description>For allowing starting a form</description>
            <url-pattern>/startformulieren/*</url-pattern>
        </web-resource-collection>
    </security-constraint>

    <login-config>
        <auth-method>OIDC</auth-method>
    </login-config>
</web-app>
